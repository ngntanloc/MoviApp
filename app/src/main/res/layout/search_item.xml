<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/img_movie"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/thor_poster" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/parent"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor Thunder And Love"
                android:textSize="20sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_genre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre 1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_genre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre 2"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMDB"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_imdbPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.5"
                    android:layout_marginStart="5dp"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

</RelativeLayout>